{% extends 'base.jinja2' %}
{% block content %}
<h1>{{post['title']}}</h1>
<p>{{post['content']}}</p>

<!-- Edit and Delete Buttons -->
<a href="{{ url_for('edit_post', post_id=post['post_id']) }}">
    <button>Edit Post</button>
</a>

<!-- Delete Button (Form) -->
<form action="{{ url_for('delete_post', post_id=post['post_id']) }}" method="POST">
    <button type="submit" onclick="return confirm('Are you sure you want to delete this post?');">Delete Post</button>
</form>
{% endblock %}